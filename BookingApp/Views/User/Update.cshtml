@{
    ViewData["Title"] = "Update user";
}

@model BookingApp.Models.UserUpdateModel

<div>
    <form method="POST">
        <div class="form-group">
            <label for="book">Username</label>
            <input type="text" class="form-control" name="username" maxlength="16" id="username" aria-describedby="username" placeholder="Book title" value="@Model.Username" required />
        </div>
        <div class="form-group">
            <label for="copies">Password</label>
            <input type="password" class="form-control" id="password" maxlength="16" name="password" placeholder="Password" />
        </div>
        <div class="form-group">
            <select asp-for="SelectedRole" asp-items="Model.RolesModel" class="form-control"></select>
        </div>
        @Html.HiddenFor(x => Model.ID)
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>